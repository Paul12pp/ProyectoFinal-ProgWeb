@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

       
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"  class="nav-link text-primary">Hola! @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <li class="text-white">///</li>
                <button type="submit"  class="btn btn-primary">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
   
    <ul class="nav navbar-nav navbar-right">
        <li class="space_navbar"><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="space_navbar"><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}