@model ProyectoFinal.Models.Consumo

@{
    ViewData["Title"] = "Tipos de Consumos";
}


<div class="container">
<h2>Tipos de Consumos</h2>
<hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateConsumo">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @if (Model != null && Model.IdConsumo != 0)
                        {
                            <input asp-for="IdConsumo" hidden />
                        }
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagen" class="control-label"></label>
                        <input asp-for="Imagen" class="form-control" />
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="FechaCreacion" class="control-label"></label>*@
                        <input asp-for="FechaCreacion" class="form-control" hidden value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm",System.Globalization.CultureInfo.InvariantCulture)" />
                        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @if (Model != null && Model.IdConsumo != 0)
                        {
                            <input type="submit" value="Actualizar" class="btn btn-primary" />
                        }
                        else
                        {
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        }
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="table-responsive-sm">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                <a asp-action="CreateConsumo" asp-route-sortOrder="@ViewData["CodeSort"]">Código</a>
                            </th>
                            <th>
                                <a asp-action="CreateConsumo" asp-route-sortOrder="@ViewData["DescripSort"]">Descripción</a>
                            </th>
                            <th>Imagen</th>
                            <th>
                                <a asp-action="CreateConsumo" asp-route-sortOrder="@ViewData["DateSort"]">Fecha creación</a>
                            </th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Consumos)
                        {
                            <tr>
                                <td>@item.IdConsumo</td>
                                <td>@item.Descripcion</td>
                                <td width="25%">
                                    <img src="@item.Imagen" alt="@item.Descripcion" width="20%" />
                                </td>
                                <td>@item.FechaCreacion</td>
                                <td>
                                    <a asp-action="CreatePago" asp-route-id="@item.IdConsumo">Editar</a>
                                    <a asp-action="DeletePago" asp-route-id="@item.IdConsumo">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
